            },
            {
              "value": "2",
              "label": "2 items per row"
            },
            {
              "value": "slider",
              "label": "Slider"
            }
          ],
          "default": "slider"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
